<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMenuActivity"

    android:paddingVertical="60dp"
    android:paddingHorizontal="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KALORI IN"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*pengisian opsional"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jenis waktu makan"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="20dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="30dp"
            android:paddingHorizontal="20dp"
            android:background="@color/abuFundamental"
            android:textSize="17sp"
            android:id="@+id/spinnerJenisMakan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="waktu mulai makan"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/waktuMulaiMakan"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pilih waktu"
                android:fontFamily="@font/poppins_medium"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:backgroundTint="@color/black"
                android:id="@+id/btn_tambahWaktuMakan"/>

        </LinearLayout>

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/abuFundamental"
            android:paddingHorizontal="20dp"
            android:id="@+id/timePickerMakan"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="apply"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_applyWaktuMakan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nama makanan"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namaMakanan"
            android:text=""
            android:background="@drawable/edit_edit_text"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="takaran saji"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/takaranSaji"
            android:text=""
            android:background="@drawable/edit_edit_text"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kalori makanan"
            android:textSize="16sp"

            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:id="@+id/kaloriMakanan"
            android:background="@drawable/edit_edit_text"
            android:fontFamily="@font/poppins_medium"
            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="submit"
            android:id="@+id/submitBtn"
            android:textSize="16sp"
            android:backgroundTint="@color/whiteBodyColor"
            android:textColor="@color/black" />
    </LinearLayout>
</ScrollView>