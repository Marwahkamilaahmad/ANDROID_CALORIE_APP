<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:orientation="vertical"
    android:paddingHorizontal="35dp"
    android:background="#C2D3C4"
    android:paddingVertical="30dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/avatariconremove"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:outlineAmbientShadowColor="@color/black"
        app:cardBackgroundColor="#96AF99"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAMA"
        android:id="@+id/text_nama"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email@gmail.com"
        android:textAlignment="center"
        android:id="@+id/text_email"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berat badan"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:id="@+id/text_berat_badan"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tinggi badan"
        android:id="@+id/text_tinggi_badan"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Target Kalori"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/text_kalori"
        android:textSize="18sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="logout"
        android:textColor="@color/black"
        android:backgroundTint="@color/whiteu"
        android:id="@+id/buttonLogout"
        android:layout_marginTop="20dp"/>


</LinearLayout>