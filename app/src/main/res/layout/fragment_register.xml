<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterFragment"
    android:paddingHorizontal="25dp"
    android:orientation="vertical"
    android:background="#C2D3C4"
    android:id="@+id/fragment_container"
    android:paddingVertical="10dp">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/hijauPastel2"
        app:cardCornerRadius="15dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Register"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textSize="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:id="@+id/text_uname"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:hint="Username"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:textSize="16sp"
            android:background="@drawable/edit_edit_text"
            />

        <EditText
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:hint="Email"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:textSize="16sp"
            android:background="@drawable/edit_edit_text"
            />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/text_pass"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:hint="Password"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:background="@drawable/edit_edit_text"
            />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/text_tinggibadan"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:hint="Tinggi Badan"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_edit_text"
            android:inputType="number"
            android:textSize="16sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/text_beratbadan"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:hint="Berat Badan"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_edit_text"
            android:textSize="16sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/text_kaloritarget"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:hint="Kalori Target"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_edit_text"
            android:textSize="16sp"
            />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/settingCheckbox"
            android:text="By checking the box you agree to our Terms and Conditions."
            />

    </LinearLayout>


    </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Register"
            android:textColor="@color/white"
            android:enabled="false"
            android:layout_marginTop="10dp"
            android:id="@+id/btnRegister"
            android:backgroundTint="#000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Already Have an Account? Login"
            android:textAlignment="center"
            />



</LinearLayout>
